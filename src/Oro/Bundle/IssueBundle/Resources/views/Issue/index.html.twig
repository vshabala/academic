{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set pageTitle = 'Issue'|trans %}
{% set gridName = 'issue-grid' %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
    entity_class: entity_class,
    exportProcessor: 'oro_issue_export',
    exportTemplateProcessor: 'oro_issue_template',
    importProcessor: 'oro_issue.add_or_replace',
    importTitle: 'oro.issue.import'|trans,
    dataGridName: gridName
    } %}
    {% if resource_granted('oro_issue_view') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('issue_create'),
                'entity_label': 'Issue'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}