{% extends 'OroUIBundle:actions:index.html.twig' %}
{% set pageTitle = 'oro.issue.my_issues'|trans %}

{% block content %}
    {{ dataGrid.renderGrid('dashboard_user_grid_full',{'userid':userId}) }}
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumbs = [
    {'label': 'oro.issue.my_issues'|trans }
    ] %}
    {% include 'OroNavigationBundle:Menu:breadcrumbs.html.twig' %}
{% endblock breadcrumb %}

{% block navButtons %}
    {% if resource_granted('oro_issue_view') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('issue_create'),
                'entity_label': 'Issue'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}