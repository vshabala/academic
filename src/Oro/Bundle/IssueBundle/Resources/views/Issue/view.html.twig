{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set entity = "issue" %}

{% block navButtons %}
    {% if resource_granted('EDIT', issue) %}
        {{ UI.editButton({
            'path' : path('issue_update', { id: issue.id }),
            'entity_label': 'Issue'|trans
        }) }}
    {% endif %}

    {% if resource_granted('DELETE', issue) %}
        {{ UI.deleteButton({
            'dataUrl': path('issue_delete', {'id': issue.id}),
            'dataRedirect': path('issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-issue',
            'dataId': issue.id,
            'entity_label': 'Issue'|trans,
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity':      issue,
    'indexPath':   path('issue_index'),
    'indexLabel': 'Issue'|trans,
    'entityTitle': issue.summary
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {{ UI.renderProperty('Summary'|trans, issue.summary) }}
                    {{ UI.renderProperty('Code'|trans, issue.code) }}
                    {{ UI.renderProperty('Created at'|trans, issue.createdAt|date) }}
                    {{ UI.renderProperty('Updated at'|trans, issue.updatedAt|date) }}
                </div>
            </div>
        </div>
    {% endset %}
    {% set dataBlocks = [
    {
    'title': 'Data'|trans,
    'class': 'active',
    'subblocks': [
    { 'data' : [data] }
    ]
    }
    ] %}

    {% set id = 'issueView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}